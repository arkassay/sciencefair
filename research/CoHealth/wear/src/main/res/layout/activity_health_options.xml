<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.WatchViewStub
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/watch_view_stub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:textColor="@color/white"
    app:rectLayout="@layout/rect_activity_health_options"
    app:roundLayout="@layout/round_activity_health_options"
    tools:context="com.beta.cohealth.healthOptions"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/walkConfirmationTitle"
        android:textColor="@color/white"
        android:gravity="bottom|center"
        android:layout_marginBottom="55dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/walkConfirmationDesc"
        android:textColor="@color/white"
        android:gravity="bottom|center"
        android:padding="16dp"
        android:textSize="14dp" />

    <ImageView
        android:id = '@+id/unicorn'
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:src="@drawable/unicorn_white"
        android:gravity="top|center"
        android:layout_marginTop="10dp"/>


</android.support.wearable.view.WatchViewStub>
